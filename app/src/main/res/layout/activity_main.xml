<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleWindow_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/messageWindow_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleWindow_1" />

                <TextView
                    android:id="@+id/break_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="End"
                    android:textAlignment="center"
                    android:layout_below="@id/messageWindow_1" />


                <TextView
                    android:id="@+id/titleWindow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/break_1"/>

                <TextView
                    android:id="@+id/messageWindow_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleWindow_2" />

                <TextView
                    android:id="@+id/break_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="End"
                    android:textAlignment="center"
                    android:layout_below="@id/messageWindow_2" />

                <TextView
                    android:id="@+id/titleWindow_3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/break_2"/>

                <TextView
                    android:id="@+id/messageWindow_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleWindow_3" />

                <TextView
                    android:id="@+id/break_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="End"
                    android:textAlignment="center"
                    android:layout_below="@id/messageWindow_3" />

                <TextView
                    android:id="@+id/titleWindow_4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/break_3"/>

                <TextView
                    android:id="@+id/messageWindow_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleWindow_4" />

                <TextView
                    android:id="@+id/break_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="End"
                    android:textAlignment="center"
                    android:layout_below="@id/messageWindow_4" />

            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>